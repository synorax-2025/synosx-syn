{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://synosx.dev/schemas/chapters.registry.schema.json",
  "title": "Narratives Chapters Registry",
  "type": "object",
  "additionalProperties": false,

  "required": ["meta", "chapters"],

  "properties": {
    "meta": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "registry",
        "status",
        "description",
        "governance_note",
        "last_updated"
      ],
      "properties": {
        "registry": { "type": "string", "minLength": 1 },
        "status": { "type": "string", "enum": ["non-normative"] },
        "description": { "type": "string", "minLength": 1 },
        "governance_note": { "type": "string", "minLength": 1 },
        "last_updated": { "type": "string", "minLength": 8 }
      }
    },

    "chapters": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "./narratives.chapter.entry.schema.json"
      }
    }
  }
}
