{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://synosx.dev/schemas/narratives.case.schema.json",
  "title": "Narratives Case File",
  "type": "object",
  "additionalProperties": false,
  "required": ["id", "title", "meta", "sections"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^case-\\d{2}$"
    },
    "title": { "type": "string", "minLength": 1 },
    "subtitle": { "type": "string", "minLength": 1 },
    "summary": { "type": "string", "minLength": 1 },

    "meta": {
      "type": "object",
      "additionalProperties": false,
      "required": ["category", "non_normative"],
      "properties": {
        "category": { "type": "string", "minLength": 1 },
        "non_normative": { "type": "boolean" }
      }
    },

    "sections": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "#/$defs/section" }
    }
  },

  "$defs": {
    "section": {
      "type": "object",
      "additionalProperties": false,
      "required": ["heading", "blocks"],
      "properties": {
        "heading": { "type": "string", "minLength": 1 },
        "blocks": {
          "type": "array",
          "minItems": 1,
          "items": { "$ref": "#/$defs/block" }
        }
      }
    },

    "block": {
      "oneOf": [
        { "$ref": "#/$defs/block_p" },
        { "$ref": "#/$defs/block_list" },
        { "$ref": "#/$defs/block_quote" }
      ]
    },

    "block_p": {
      "type": "object",
      "additionalProperties": false,
      "required": ["type", "text"],
      "properties": {
        "type": { "const": "p" },
        "text": { "type": "string", "minLength": 1 }
      }
    },

    "block_list": {
      "type": "object",
      "additionalProperties": false,
      "required": ["type", "items"],
      "properties": {
        "type": { "const": "list" },
        "items": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string", "minLength": 1 }
        }
      }
    },

    "block_quote": {
      "type": "object",
      "additionalProperties": false,
      "required": ["type", "text"],
      "properties": {
        "type": { "const": "quote" },
        "text": { "type": "string", "minLength": 1 }
      }
    }
  }
}
